<%= form_for @album do |f| %>

  <% if @album.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@album.errors.count, "error") %> prohibited this album from being saved:</h2>

      <ul>
      <% @album.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <!-- <div class="field">
      <%= f.label :label, "Record Label" %>
      <%= f.select(:label_id, @labels, { include_blank: true }) %>
  </div> -->

  <div class="field" id="addNew">
     <%= fields_for @label do |l| %>
        <%= l.label :name, "New Record Label" %><br>
        <%= l.text_field(:name, name: "new_label") %>
    <% end %>
     <br><br/>
  </div>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :artist %><br>
    <%= f.text_field :artist %>
  </div>

  <div class="field">
    <%= f.label :genre %><br>
    <%= f.text_field :genre %>
  </div>

  <div class="field">
    <%= f.label :year %><br>
    <%= f.number_field :year %>
  </div>

  <div class="field">
    <%= hidden_field_tag 'album[added]', DateTime.now.to_date %>
  </div>

  <div class="field">
    <%= hidden_field_tag 'album[plays]', 0 %>
  </div>

  <div class="actions">
    <%= submit_tag "Create", :name => 'create' %>
  </div>

<% end %>

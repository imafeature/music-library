<%= stylesheet_link_tag "albumtracker" %>
<p id="notice"><%= notice %></p>

<h1>Listing Albums</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th><%= link_to 'Artist', artists_index_path %></th>
      <th><%= link_to 'Record Label', labels_index_path %></th>
      <th>Genre</th>
      <th>Year</th>
      <th>Added</th>
      <th>Plays</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @albums.each do |album| %>
      <tr>
        <td><%= link_to album.title, album %></td>
        <td><%= album.artist.name unless album.artist.nil?  %></td>
        <td><%= album.label.name unless album.label.nil? %></td>
        <td><%= album.genre %></td>
        <td><%= album.year %></td>
        <td><%= album.added %></td>
        <td><%= album.plays %></td>
        <td><%= link_to 'Show', album %></td>
        <td><%= link_to 'Edit', edit_album_path(album) %></td>
        <td><%= link_to 'Destroy', album, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Album', new_album_path %>
